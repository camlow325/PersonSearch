@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-8">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-2 control-label" for="Name">Name</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" id="name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label" for="Delay">Delay</label>
                <div class="col-md-10">
                    <input class="form-control" type="number" id="delay" value="10" min="0"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" id="search" value="Search" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
</div>
<hr/>
<div class="row">
    <div class="col-md-12">
        <label class="col-md-12 control-label" id="status"></label>
    </div>
</div>
<div class="pre-scrollable">
    <table id="results">
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/home")
}
